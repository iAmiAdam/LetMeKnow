<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#73c5ff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        android:id="@+id/logo"
        android:src="@drawable/logo"/>
    
    <View
        android:id="@+id/logoDivider"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:background="#818181"
    	android:layout_below="@+id/logo"/>
    
    <TextView
        android:id="@+id/whereText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoDivider"
        android:layout_centerHorizontal="true"
        android:text="@string/where" />
    
    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whereText"
        android:layout_centerHorizontal="true"
        android:onClick="mapClick"
        android:text="@string/mapButton" />
    
    <TextView
        android:id="@+id/location"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapButton"
        android:layout_centerHorizontal="true"
        android:text="" />
    
    <View
        android:id="@+id/mapDivider"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:background="#818181"
    	android:layout_below="@+id/location"/>
    

    <TextView
        android:id="@+id/whoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapDivider"
        android:layout_centerHorizontal="true"
        android:text="@string/who" />

    <Button
        android:id="@+id/contactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whoText"
        android:layout_centerHorizontal="true"
        android:text="@string/contactsButton"
        android:onClick="contactClick" />
    
    <TextView
        android:id="@+id/chosenContact"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactsButton"
        android:layout_centerHorizontal="true"
        android:text="" />
    
    <View
        android:id="@+id/contactsDivider"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:layout_below="@+id/chosenContact"
    	android:background="#818181" />

    <TextView
        android:id="@+id/whatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactsDivider"
        android:layout_centerHorizontal="true"
        android:text="@string/what" />

    <EditText
        android:id="@+id/msgText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatText"
        android:ems="10"
        android:inputType="textMultiLine" >
    </EditText>

    <View
        android:id="@+id/msgDivider"
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
    	android:background="#818181"
    	android:layout_below="@+id/msgText"/>
    
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/msgDivider"
        android:text="@string/reset" 
        android:onClick="resetClick"/>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/resetButton"
        android:layout_alignBottom="@+id/resetButton"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/msgDivider"
        android:text="@string/confirm" 
        android:onClick="confirmClick" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/marker"
        android:layout_alignTop="@+id/contactsButton"
        android:src="@drawable/person" />

    <ImageView
        android:id="@+id/contactTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/markerTick"
        android:layout_alignTop="@+id/contactsButton"
        android:src="@drawable/tickgrey" />

    <ImageView
        android:id="@+id/markerTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mapButton"
        android:layout_toRightOf="@+id/contactsButton"
        android:src="@drawable/tickgrey" />

    <ImageView
        android:id="@+id/marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mapButton"
        android:layout_toLeftOf="@+id/contactsButton"
        android:src="@drawable/marker" />

</RelativeLayout>
